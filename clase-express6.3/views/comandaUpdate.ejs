<%- include("header") %>

    <h2>Edici√≥n de Comanda</h2>
    <form action="/comandaUpdate" method="post">
        <label for="usuario">Usuario </label>
        <select id="id_usuarios" name="id_usuarios">
            <% usuarios.forEach((usuarios, index)=>{ %>
                <option value="<%= usuarios.id %>" selected='<%= comanda.id_usuarios %>'>
                    <%= usuarios.nombre %>
                </option>
                <% }) %>
        </select>
        <label for="producto">Producto </label>
        <select id="id_productos" name="id_productos">
            <% productos.forEach((producto, index)=>{ %>
                <option value="<%= producto.id %>" selected='<%= comanda.id_productos %>'>
                    <%= producto.nom %>
                </option>
                <% }) %>
        </select>
        <button type="submit">Enviar</button>
    </form>
    <%- include("footer") %>